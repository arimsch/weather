<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeatherF" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="IconButtom">
        <item name="iconTint">?attr/colorControlNormal</item>
        <item name="android:insetBottom">0dp</item>
<item name="android:insetRight">0dp</item>
    <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">4dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">25dp</item>
    </style>

    //основной стиль текста
    <style name="MainTextViewStyle">
<item name="fontFamily">sans-serif</item>
    </style>

    //стиль для разделителей
    <style name="DividerStyle">
        <item name="backgroundColor">@color/dividerColor</item>
    </style>

    <style name="AditionalWeatherInformationStyle" parent="MainTextViewStyle">
        <item name="android:textSize">14sp</item>
    </style>
</resources>